    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Debug Mocha Test",
            "type": "node",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "./test/**/*.spec.js",
                "--colors",
                "--no-timeouts"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {}
        }
    ]
}